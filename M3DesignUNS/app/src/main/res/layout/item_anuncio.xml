<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_anuncio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/md_theme_light_outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_anuncio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio de matrícula"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="@color/md_theme_light_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_anuncio_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-02-15"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/md_theme_light_onSurfaceVariant" />

        <TextView
            android:id="@+id/tv_anuncio_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es el párrafo en el que se muestra el contenido del anuncio"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/md_theme_light_onSurface"
            android:layout_marginTop="8dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_read_more"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leer más"
            android:textColor="@color/md_theme_light_primary"
            android:icon="@drawable/chevron_right_24px"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
