<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:checkedIconTint="@color/md_theme_primary"
    android:elevation="4dp"
    android:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Card"
    app:strokeColor="@color/md_theme_light_outline"
    app:strokeWidth="1dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_card_home_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@color/md_theme_light_primary" />

            <TextView
                android:id="@+id/tv_card_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Anuncios Oficiales"
                android:textColor="@color/md_theme_light_primary"
                />
        </LinearLayout>

        <!-- Content text -->
        <TextView
            android:id="@+id/tv_card_home_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="Últimos anuncios y comunicados oficiales de la universidad."
            android:textColor="?attr/colorOnSecondaryContainer" />

        <!-- 'See More' Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_mas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Ver más"
            android:textColor="@color/md_theme_light_primary"
            android:icon="@drawable/chevron_right_24px"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            app:iconGravity="end"
            app:iconTint="?attr/colorPrimary"
            app:rippleColor="?attr/colorPrimary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
