<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ConcursoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concursos UNS"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/trophy_24px"
        android:drawablePadding="10dp"
        android:drawableTint="#D20037" />

    <EditText
        android:id="@+id/searchInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar concursos..."
        android:drawableStart="@drawable/search_24px"
        android:drawableTint="@color/black"
        android:textSize="15dp"
        android:padding="5dp"
        android:background="@drawable/search_input_background"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchInput"
        app:layout_constraintBottom_toTopOf="@+id/viewAllButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hackathon UNS 2024"
                        android:textColor="#D20037"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 2024-05-15"
                        android:textColor="#808080"
                        android:drawableStart="@drawable/calendar_today_24px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipos de 3-5 estudiantes"
                        android:textColor="#808080"
                        android:drawableStart="@drawable/person_24px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Competencia de desarrollo de software para resolver problemas reales de la región."
                        android:textColor="#808080"
                        android:paddingTop="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más información"
                        android:textColor="#D20037"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableEnd="@drawable/chevron_right_24px"
                        android:drawablePadding="8dp"
                        android:layout_gravity="end"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Concurso de Investigación Científica"
                        android:textColor="#D20037"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 2024-06-30"
                        android:textColor="#808080"
                        android:drawableStart="@drawable/calendar_today_24px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual o equipos de hasta 3 estudiantes"
                        android:textColor="#808080"
                        android:drawableStart="@drawable/person_24px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presentación de proyectos de investigación en diversas áreas científicas."
                        android:textColor="#808080"
                        android:paddingTop="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más información"
                        android:textColor="#D20037"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableEnd="@drawable/chevron_right_24px"
                        android:drawablePadding="8dp"
                        android:layout_gravity="end"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olimpiadas de matemáticas UNS"
                        android:textColor="#D20037"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 2024-04-20"
                        android:textColor="#808080"
                        android:drawableStart="@drawable/calendar_today_24px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estudiantes de todas las facultades"
                        android:textColor="#808080"
                        android:drawableStart="@drawable/person_24px"
                        android:drawablePadding="8dp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Competencia individual de resolución de problemas matemáticos."
                        android:textColor="#808080"
                        android:paddingTop="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más información"
                        android:textColor="#D20037"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableEnd="@drawable/chevron_right_24px"
                        android:drawablePadding="8dp"
                        android:layout_gravity="end"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add more cards as needed -->

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/viewAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver todos los concursos"
        android:backgroundTint="#D20037"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

